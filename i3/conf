# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec $bin/volume +
bindsym XF86AudioLowerVolume exec $bin/volume -
bindsym XF86AudioMute        exec $bin/volume mute

# Screen brightness controls
bindsym XF86MonBrightnessUp   exec $bin/backlight + # increase screen brightness
bindsym XF86MonBrightnessDown exec $bin/backlight - # decrease screen brightness
bindsym $mod+XF86MonBrightnessUp   exec $bin/keylight + # increase keyboard brightness
bindsym $mod+XF86MonBrightnessDown exec $bin/keylight - # decrease keyboard brightness

bindsym XF86Display exec /home/jacob/code/bin/display toggle

# Music controls
bindcode 110 exec $bin/music prev # Home
bindcode 115 exec $bin/music pause # End
bindcode 118 exec $bin/music next # Insert

bindsym XF86Explorer exec nautilus --browser "Downloads"
bindsym $mod+XF86Explorer exec nautilus --browser "`cat ~/.cache/pwd`"
bindsym Mod1+Tab workspace next_on_output
bindsym Mod1+Shift+Tab workspace prev_on_output

# Screenshots
set $screenie_path '/home/jacob/Pictures/screenshots/%Y-%m-%d--%H-%M-%S--$wx$h.png'
bindsym --release Print exec scrot $screenie_path
bindsym --release Shift+Print exec scrot -s $screenie_path

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # status_command i3status
    status_command i3blocks
    font pango:FontAwesome, firamono 5

    tray_padding 1

    separator_symbol |

    strip_workspace_numbers yes

    colors {
           #                  Backgrd Border  Text Color
           focused_workspace  #0080ff #0080ff #ffffff
           active_workspace   #0080ff #0080ff #ffffff
           inactive_workspace #000000 #000000 #ffffff
           urgent_workspace   #ff0000 #ff0000 #ffffff
    }
}

